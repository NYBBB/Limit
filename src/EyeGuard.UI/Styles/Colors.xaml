<?xml version="1.0" encoding="utf-8"?>
<!-- 
    EyeGuard 颜色系统定义
    基于 SRS 文档中的设计规范
-->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== 品牌色彩 ===== -->
    
    <!-- 主色调 (BlueViolet) -->
    <Color x:Key="PrimaryColor">#8A2BE2</Color>
    <Color x:Key="PrimaryLightColor">#A855F7</Color>
    <Color x:Key="PrimaryDarkColor">#7C3AED</Color>
    
    <!-- 渐变色 (用于图表) -->
    <Color x:Key="GradientStartColor">#C084FC</Color>
    <Color x:Key="GradientEndColor">#A855F7</Color>
    
    <!-- ===== 主色画刷 ===== -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    
    <!-- 渐变画刷 (用于进度条、图表填充) -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource GradientStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource GradientEndColor}" Offset="1"/>
    </LinearGradientBrush>

    <!-- ===== 语义化颜色 ===== -->
    
    <!-- 成功状态 (休息中) -->
    <Color x:Key="SuccessColor">#10B981</Color>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    
    <!-- 警告状态 (疲劳值较高) -->
    <Color x:Key="WarningColor">#F59E0B</Color>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    
    <!-- 危险状态 (疲劳值极高) -->
    <Color x:Key="DangerColor">#EF4444</Color>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>

    <!-- ===== 卡片样式 ===== -->
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="LargeCornerRadius">16</CornerRadius>
    <Thickness x:Key="CardPadding">24</Thickness>
    <Thickness x:Key="CardMargin">8</Thickness>

</ResourceDictionary>
