<?xml version="1.0" encoding="utf-8"?>
<!-- 
    EyeGuard 字体样式定义
    使用 Windows 11 默认 Segoe UI Variable 字体
-->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== 字体族 ===== -->
    <FontFamily x:Key="DisplayFont">Segoe UI Variable Display</FontFamily>
    <FontFamily x:Key="TextFont">Segoe UI Variable Text</FontFamily>

    <!-- ===== 标题样式 ===== -->
    
    <!-- 超大标题 (用于仪表盘数值) -->
    <Style x:Key="HeroTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DisplayFont}"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>
    
    <!-- 大标题 (用于页面标题) -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DisplayFont}"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>
    
    <!-- 副标题 (用于卡片标题) -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource TextFont}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>

    <!-- ===== 正文样式 ===== -->
    
    <!-- 正文 -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource TextFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>
    
    <!-- 辅助文本 (用于标签、说明) -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource TextFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- ===== 数值样式 ===== -->
    
    <!-- 大数值显示 -->
    <Style x:Key="LargeValueTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DisplayFont}"/>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>
    
    <!-- 数值单位 -->
    <Style x:Key="UnitTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource TextFont}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="4,0,0,4"/>
    </Style>

</ResourceDictionary>
