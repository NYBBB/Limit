<?xml version="1.0" encoding="utf-8"?>

<!-- 
    DrainersCard.xaml - Limit 3.0 消耗排行卡片
    Zone C: Energy Drainers
    Phase 2.5: 优化版 - 加粗进度条、添加底槽
-->
<UserControl
    x:Class="EyeGuard.UI.Controls.DrainersCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EyeGuard.UI.Controls">

    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="16"
            Padding="20">
        <!-- 添加阴影 -->
        <Border.Shadow>
            <ThemeShadow/>
        </Border.Shadow>
        
        <Grid RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xE71A;" FontSize="14" Foreground="#E81123"/>
                <TextBlock Text="精力消耗排行"
                           FontSize="11"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           FontWeight="SemiBold"
                           CharacterSpacing="80"/>
            </StackPanel>
            
            <!-- Top 3 List - Phase 2.5: 加粗进度条 -->
            <ItemsControl Grid.Row="1" 
                          ItemsSource="{x:Bind Drainers, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,8" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 排名徽章 -->
                            <Border Grid.Column="0"
                                    Width="28" Height="28"
                                    CornerRadius="6"
                                    Background="{ThemeResource ControlAltFillColorSecondaryBrush}">
                                <TextBlock Text="{Binding Rank}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- 应用图标 -->
                            <FontIcon Grid.Column="1"
                                      Glyph="{Binding IconGlyph}"
                                      FontSize="16"
                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                      VerticalAlignment="Center"/>
                            
                            <!-- 名称 + 进度条（带底槽） -->
                            <StackPanel Grid.Column="2" Spacing="6" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                
                                <!-- 进度条容器（带底槽） -->
                                <Grid Height="10">
                                    <!-- 底槽 (Track) -->
                                    <Border Background="{ThemeResource ControlAltFillColorSecondaryBrush}"
                                            CornerRadius="5"
                                            Height="10"/>
                                    <!-- 进度条 -->
                                    <ProgressBar Value="{Binding Percentage}" 
                                                 Maximum="100"
                                                 Height="10"
                                                 CornerRadius="5"
                                                 Foreground="{Binding BarColor}"
                                                 Background="Transparent"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 时长 -->
                            <TextBlock Grid.Column="3"
                                       Text="{Binding Duration}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- 碎片时间警告 -->
            <Border Grid.Row="2"
                    Background="{ThemeResource ControlAltFillColorTertiaryBrush}"
                    CornerRadius="8"
                    Padding="12,10"
                    Visibility="{x:Bind ShowFragmentWarning, Mode=OneWay}">
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <FontIcon Grid.Column="0" 
                              Glyph="&#xE7BA;" 
                              FontSize="16" 
                              Foreground="#888888"/>
                    <TextBlock Grid.Column="1"
                               Text="碎片时间"
                               FontSize="13"
                               Foreground="#888888"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2"
                               Text="{x:Bind FragmentTime, Mode=OneWay}"
                               FontSize="13"
                               Foreground="#888888"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
