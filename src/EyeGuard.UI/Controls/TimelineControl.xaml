<?xml version="1.0" encoding="utf-8"?>
<!-- 
    TimelineControl.xaml - Phase 3: 工作流时间轴
    垂直时间轴，显示今日工作流程
-->
<UserControl
    x:Class="EyeGuard.UI.Controls.TimelineControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EyeGuard.UI.Controls">

    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1" CornerRadius="8" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 标题 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                <TextBlock Text="⏱️" FontSize="20"/>
                <TextBlock Text="今日工作流" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>
            
            <!-- 时间轴主体 -->
            <ScrollViewer Grid.Row="1" MaxHeight="300">
                <ItemsControl ItemsSource="{x:Bind TimelineItems, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:TimelineItem">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 时间 -->
                                <TextBlock Grid.Column="0" 
                                           Text="{x:Bind TimeText}" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                
                                <!-- 时间轴线和圆点 -->
                                <Grid Grid.Column="1" VerticalAlignment="Stretch">
                                    <!-- 连接线 -->
                                    <Border Width="2" 
                                            Background="{x:Bind LineColor, Mode=OneWay}"
                                            HorizontalAlignment="Center"
                                            Visibility="{x:Bind ShowLine, Mode=OneWay}"/>
                                    <!-- 圆点 -->
                                    <Ellipse Width="12" Height="12" 
                                             Fill="{x:Bind DotColor, Mode=OneWay}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <!-- 内容卡片 -->
                                <Border Grid.Column="2" 
                                        Background="{ThemeResource ControlAltFillColorSecondaryBrush}"
                                        CornerRadius="8"
                                        Padding="12,8"
                                        Margin="8,4,0,4">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="14"/>
                                            <TextBlock Text="{x:Bind Title}" 
                                                       FontSize="14" 
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                        <TextBlock Text="{x:Bind Description}" 
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- 空状态 -->
            <TextBlock Grid.Row="1" 
                       Text="暂无今日工作记录"
                       FontSize="14"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="{x:Bind EmptyStateVisibility, Mode=OneWay}"/>
        </Grid>
    </Border>
</UserControl>
