<UserControl
    x:Class="EyeGuard.UI.Controls.InsightBanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="600">

    <Border CornerRadius="{StaticResource CardCornerRadius}"
            Padding="20,16"
            Background="{ThemeResource InsightBannerBackgroundBrush}"
            BorderBrush="{ThemeResource InsightBannerBorderBrush}"
            BorderThickness="1">
        
        <Grid ColumnDefinitions="Auto, *">
            <!-- Icon Circle -->
            <Border Grid.Column="0"
                    Width="48"
                    Height="48"
                    CornerRadius="24"
                    Background="{ThemeResource InsightBannerIconBackgroundBrush}"
                    VerticalAlignment="Top">
                <FontIcon x:Name="IconElement"
                          Glyph="{x:Bind Icon, Mode=OneWay}"
                          FontSize="24"
                          Foreground="{ThemeResource InsightBannerIconForegroundBrush}"/>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Column="1"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        Spacing="4">
                
                <!-- Main Message -->
                <TextBlock x:Name="MessageText"
                           Text="{x:Bind Message, Mode=OneWay}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{ThemeResource InsightBannerTextBrush}"
                           TextWrapping="Wrap"
                           LineHeight="22"/>
                
                <!-- Sub Text (Optional) -->
                <TextBlock x:Name="SubTextElement"
                           Text="{x:Bind SubText, Mode=OneWay}"
                           FontSize="13"
                           Foreground="{ThemeResource InsightBannerSubTextBrush}"
                           TextWrapping="Wrap"
                           Visibility="{x:Bind HasSubText, Mode=OneWay}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
